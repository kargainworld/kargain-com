{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mongo": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "exampleGlobalVariable": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
//        "prettier/prettier": "error",
        "no-mixed-spaces-and-tabs": "off",
        "strict": 0,
        "indent": [
            "error",
            4
        ],
        "eqeqeq": "error",
        "no-inner-declarations": "error",
        "curly": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-extra-semi": "error",
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "template-curly-spacing": [
            "off"
        ],
        "no-unused-vars": "off"
    }
}
